#!/usr/bin/env bash
# Project:     Docker Magento
# Description: Project CLI tool for running Docker Magento.
# Author:      Rye Miller
#
# Version: 0.1 [2020-11-22]
# Copyright: Copyright (c) 2020, Rye Miller

start()
{
    docker-compose up -d
}

environment:check()
{
    source ./lib/composer_auth.sh
}

create:project()
{
    environment:check
    source ./lib/composer_create_project.sh
}

stop()
{
    docker-compose down -v
}

"$@"
